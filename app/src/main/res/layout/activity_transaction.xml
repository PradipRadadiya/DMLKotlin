<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".transaction.TransactionAct">

    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/toolbar"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent" android:id="@+id/include2"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/include2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="280dp"
                          android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/transaction_box_height"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            app:cardBackgroundColor="@color/default_icon_color"
                            android:id="@+id/cardView2"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/cardView">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/eight_dp"
                                android:gravity="center_vertical">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_menu_gallery"
                                    android:id="@+id/imageView2"
                                    style="@style/transaction_image"
                                    android:tint="@color/white"/>

                            <com.diamondmela.utility.MyTextView
                                    android:text="Total Debit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvTotalDebit"
                                    style="@style/transaction_text"
                            />

                            <com.diamondmela.utility.MyTextView
                                    android:text="(Diamondmela Receivable)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/myTextView2"
                                    style="@style/transaction_text"
                            />

                            <com.diamondmela.utility.MyTextView
                                    android:text="Rs.20,180"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvDebitPrice"
                                    style="@style/transaction_text"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/transaction_box_height"
                            app:cardBackgroundColor="@color/default_icon_color"
                            android:id="@+id/cardView" app:layout_constraintStart_toEndOf="@+id/cardView2"
                            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cardView2"
                            app:layout_constraintBottom_toBottomOf="@+id/cardView2" android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:padding="@dimen/eight_dp"
                                android:gravity="center_vertical">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_menu_gallery"
                                    android:id="@+id/imageView3"
                                    style="@style/transaction_image"
                                    android:tint="@color/white"/>

                            <com.diamondmela.utility.MyTextView
                                    android:text="Total Deposit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvTotalDeposit"
                                    style="@style/transaction_text"/>
                            <com.diamondmela.utility.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/myTextView5"
                                    style="@style/transaction_text"/>

                            <com.diamondmela.utility.MyTextView
                                    android:text="Rs.20,180"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvDepositPrice"
                                    style="@style/transaction_text"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/transaction_box_height"
                            app:cardBackgroundColor="@color/default_icon_color"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                            app:layout_constraintTop_toBottomOf="@+id/cardView2" android:id="@+id/cardView4"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/cardView3" android:layout_marginStart="16dp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:padding="@dimen/eight_dp"
                                android:gravity="center_vertical">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_menu_gallery"
                                    android:id="@+id/imageView4"
                                    style="@style/transaction_image"
                                    android:tint="@android:color/white"/>

                            <com.diamondmela.utility.MyTextView
                                    android:text="Total Credit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvTotalCredit"
                                    style="@style/transaction_text"/>

                            <com.diamondmela.utility.MyTextView
                                    android:text="(Diamondmela Payable)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/myTextView8"
                                    style="@style/transaction_text"/>

                            <com.diamondmela.utility.MyTextView
                                    android:text="Rs.20,180"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvCreditPrice"
                                    style="@style/transaction_text"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/transaction_box_height"
                            app:cardBackgroundColor="@color/default_icon_color"
                            android:id="@+id/cardView3" app:layout_constraintStart_toEndOf="@+id/cardView4"
                            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cardView4"
                            app:layout_constraintBottom_toBottomOf="@+id/cardView4" android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:padding="@dimen/eight_dp"
                                android:gravity="center_vertical">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_menu_gallery"
                                    style="@style/transaction_image"
                                    android:id="@+id/imageView5"
                                    android:tint="@color/white"/>
                            <com.diamondmela.utility.MyTextView
                                    android:text="Total Debit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvFinalTotalDebit"
                                    style="@style/transaction_text"/>


                            <com.diamondmela.utility.MyTextView
                                    android:text="(Diamondmela Receivable)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/myTextView11"
                                    style="@style/transaction_text"/>


                            <com.diamondmela.utility.MyTextView
                                    android:text="Rs.20,180"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvTotalDebitPrice"
                                    style="@style/transaction_text"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="500dp" android:id="@+id/recycleViewTransaction"/>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>